<table align= "center" border = "3">
  <thead>
    <tr>
      <th bgcolor="ADC666">Gospodarz</th>
      <th bgcolor="ADC666">Gość</th>
      <th bgcolor="ADC666">Punkty gospodarzy</th>
      <th bgcolor="ADC666">Punkty gości</th>
      <th bgcolor="ADC666">Edytuj</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meczs.each do |mecz| %>
      <tr bgcolor="white">
        <td align="center"><%= mecz.gospodarz.nazwa %></td>
        <td align="center"><%= mecz.gosc.nazwa %></td>
        <td align="center"><%= mecz.punkty_gospodarzy %></td>
        <td align="center"><%= mecz.punkty_gosci %></td>
       
        <td><%= link_to 'Pokaż', mecz %>
        <%= link_to 'Edytuj', edit_mecz_path(mecz) %>
        <%= link_to 'Usuń', mecz, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

