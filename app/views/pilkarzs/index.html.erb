</center>
<table align= "center" border = "3">
	
  <thead>
    <tr>
      <th bgcolor="ADC666">Imię</th>
      <th bgcolor="ADC666">Nazwisko</th>
      <th bgcolor="ADC666">Ile goli</th>
      <th bgcolor="ADC666">Ile żółtych kartek</th>
      <th bgcolor="ADC666">Ile czerwonych</th>
      <th bgcolor="ADC666">Drużyna</th>
      <th bgcolor="ADC666">Edycja</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pilkarzs.each do |pilkarz| %>
      <tr bgcolor="white">
        <td align="center"><%= pilkarz.imie %></td>
        <td align="center"><%= pilkarz.nazwisko %></td>
        <td align="center"><%= pilkarz.ileGoli %></td>
        <td align="center"><%= pilkarz.ile_zoltych_kartek %></td>
        <td align="center"><%= pilkarz.ile_czerwonych %></td>
        <td align="center"><%= pilkarz.druzyna.nazwa %></td>
        <td align="center"><%= link_to 'Pokaż', pilkarz %>
        <%= link_to 'Edytuj', edit_pilkarz_path(pilkarz) %>
        <%= link_to 'Usuń', pilkarz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Dodaj piłkarza', new_pilkarz_path %>
</body>
